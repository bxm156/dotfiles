// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
  "name": "DotFiles",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
  "features": {
    // Ansible and ansible-lint now managed by mise (see .mise.toml and requirements.txt)
    "ghcr.io/atty303/devcontainer-features/mise:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "redhat.vscode-yaml",
        "Catppuccin.catppuccin-vsc",
        "thang-nm.catppuccin-perfect-icons",
        "tamasfe.even-better-toml"
      ]
    }
  },
  "postCreateCommand": "mise install",
  "runArgs": ["--hostname=yhap"]
  // "runArgs": ["--network=vm_net", "--ip=192.168.6.81"]
  // DoD can access host, wouldn't need to waste ips "runArgs": ["--add-host=host.docker.internal:host-gateway"]

  //"workspaceFolder": "/workspace",
  //"mounts": [
  //	"source=zfs_engineering_data,target=/workspace,type=volume"
  //],
  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],
