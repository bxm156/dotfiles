[gpg]
	format = ssh

[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers
{{- if eq .chezmoi.os "darwin" }}
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
{{- end }}

[commit]
	gpgsign = true

[core]
{{- if lookPath "code" }}
	editor = "code --wait"
{{- else if lookPath "vim" }}
	editor = "vim"
{{- else if lookPath "vim.tiny" }}
	editor = "vim.tiny"
{{- else }}
	editor = "vi"
{{- end }}
{{- if eq .chezmoi.os "darwin" }}
	autocrlf = input
{{- else if eq .chezmoi.os "linux" }}
	autocrlf = input
{{- else }}
	autocrlf = true
{{- end }}

[log]
	showSignature = true

[alias]
	# Common shortcuts
	st = status
	co = checkout
	br = branch
	ci = commit

	# Undo operations
	unstage = reset HEAD --
	undo = reset HEAD~1 --soft

	# Info and history
	last = log -1 HEAD
	graph = log --graph --oneline --all

	# Quick amend
	amend = commit --amend --no-edit
