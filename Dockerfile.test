FROM debian:bookworm-slim

# Install required packages
RUN apt-get update && \
    apt-get install -y curl zsh && \
    rm -rf /var/lib/apt/lists/*

# Create user and group with ID 3000
RUN groupadd -g 3000 user && \
    useradd -u 3000 -g 3000 -m -d /home/user user && \
    mkdir -p /home/user/.local/share && \
    chown -R user:user /home/user

# Create directory for test scripts (mounted at runtime)
RUN mkdir -p /opt/tests && \
    chmod 755 /opt/tests

USER user
WORKDIR /home/user

# Entrypoint is set in docker-compose.yml
CMD ["/bin/bash"]
