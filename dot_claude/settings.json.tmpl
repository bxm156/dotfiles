{
  "model": "sonnet-latest[1M]",
  "env": {
      "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    {{- if .isWork }}
        "ANTHROPIC_AUTH_TOKEN": "{{ .authToken }}",
        "ANTHROPIC_BEDROCK_BASE_URL": "https://chatproxy.yelpcorp.com/bedrock",
        "CLAUDE_CODE_SKIP_BEDROCK_AUTH": "1",
        "CLAUDE_CODE_USE_BEDROCK": "1",
        "ANTHROPIC_DEFAULT_SONNET_MODEL": "sonnet-latest",
        "ANTHROPIC_DEFAULT_OPUS_MODEL": "opus-latest",
        "ANTHROPIC_DEFAULT_HAIKU_MODEL": "haiku-latest",
        "OPENAI_API_KEY": "{{ .authToken }}",
        "LITELLM_BASE_URL": "https://chatproxy.yelpcorp.com"
    {{ else }}
      "ANTHROPIC_BASE_URL": "http://litellm.vms.bryanmarty.me",
      "ANTHROPIC_AUTH_TOKEN": "sk-NnW0BWqgdkoexzd-OTt2BQ",
      "ANTHROPIC_DEFAULT_MODEL": "claude-sonnet-4",
      "ANTHROPIC_DEFAULT_SONNET_MODEL": "claude-sonnet-4",
      "ANTHROPIC_DEFAULT_HAIKU_MODEL": "claude-haiku-4",
      "ANTHROPIC_DEFAULT_OPUS_MODEL": "claude-opus-4"
    {{- end }}
  },
  "extraKnownMarketplaces": {
    "superpowers-marketplace": {
      "source": {
        "source": "github",
        "repo": "obra/superpowers-marketplace"
      }
    }
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "elements-of-style@superpowers-marketplace": true,
    "superpowers-developing-for-claude-code@superpowers-marketplace": true
  },
  "permissions": {
    "allow": [
      "mcp__context7",
      "mcp__sequentialthinking",
      "mcp__firecrawl",
      "mcp__brave-search",
      "mcp__todoist",
      "Skill(superpowers:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(git status:*)",
      "Bash(git log:*)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "includeCoAuthoredBy": false,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/markdownlint-fix.sh",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
