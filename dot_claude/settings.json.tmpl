{
{{- if .isWork }}
  "model": "us.anthropic.claude-sonnet-4-5-20250929-v1:0[1M]",
  "env": {
    "ANTHROPIC_AUTH_TOKEN": "{{ .authToken }}",
    "ANTHROPIC_BEDROCK_BASE_URL": "https://chatproxy.yelpcorp.com/bedrock",
    "CLAUDE_CODE_SKIP_BEDROCK_AUTH": "1",
    "CLAUDE_CODE_USE_BEDROCK": "1",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "us.anthropic.claude-sonnet-4-5-20250929-v1:0",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "us.anthropic.claude-opus-4-1-20250805-v1:0",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "us.anthropic.claude-3-5-haiku-20241022-v1:0",
    "OPENAI_API_KEY": "{{ .authToken }}",
    "LITELLM_BASE_URL": "https://chatproxy.yelpcorp.com"
  },
{{- end }}
  "extraKnownMarketplaces": {
    "superpowers-marketplace": {
      "source": {
        "source": "github",
        "repo": "obra/superpowers-marketplace"
      }
    }
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true
  },
  "permissions": {
    "allow": [
      "mcp__context7",
      "mcp__sequentialthinking",
      "mcp__firecrawl",
      "mcp__brave-search",
      "mcp__todoist",
      "Skill(superpowers:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(git status:*)",
      "Bash(git log:*)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/markdownlint-fix.sh",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
