// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
  "name": "Starfleet command",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
  "features": {
    // Ansible and ansible-lint now managed by mise (see .mise.toml and requirements.txt)
    "ghcr.io/atty303/devcontainer-features/mise:1": {}
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh/,target=/mnt/starfleet-auth/,type=bind,ro",
    "source=${localEnv:HOME}/.claude/,target=/mnt/claude,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible",
        "ms-python.python",
        "redhat.vscode-yaml",
        "Catppuccin.catppuccin-vsc",
        "thang-nm.catppuccin-perfect-icons"
      ]
    }
  }
